{
    "settings": {
        "analysis": {
          "analyzer": {
            "english_analyzer": {
            "tokenizer": "standard",
            "filter": ["lowercase", "english_stop_filter", "synonym_filter"]
          }
        },
        "filter": {
          "english_stop_filter": {
              "type": "stop",
              "stopwords": "_english_"
          },
          "synonym_filter": {
              "type": "synonym",
              "lenient": true,
              "synonyms": [
                  "fruit => banana, pineapple, date, fig, olive, citrus"
              ]
          }       
        }
      }
    },
    "mappings": {
      "_doc": {
        "properties": {
          "title": {
            "type": "text",
            "analyzer": "english_analyzer"
          },
          "description": {
            "type": "text",
            "analyzer": "english_analyzer"
          },
          "publicationPlace": {
            "type": "text",
            "analyzer": "keyword"
          }        
        }
      }
    }
  }